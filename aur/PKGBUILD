# Maintainer: Your Name <your.email@example.com>
pkgname=python-sentence-completion
_name=${pkgname#python-}
pkgver=1.0.0
pkgrel=1
pkgdesc="A flexible journaling system for personal growth and self-reflection"
arch=('any')
url="https://github.com/yourusername/sentence-completion"
license=('MIT')
depends=('python' 'python-click' 'python-rich' 'python-yaml' 'python-dateutil')
makedepends=('python-setuptools' 'python-build' 'python-installer' 'python-wheel')
source=("https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${pkgver}.tar.gz")
sha256sums=('SKIP')

build() {
    cd "$srcdir/${_name}-${pkgver}"
    python -m build --wheel --no-isolation
}

package() {
    cd "$srcdir/${_name}-${pkgver}"
    python -m installer --destdir="$pkgdir" dist/*.whl
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
} 